.content{
  width: 100%;
  height: 100px;
  border-bottom: 1px solid gainsboro;
  font-size: 16px;
}
page{
  width: 100%;
}
.radioStyle{
  width: 14%;
  line-height: 100px;
  text-align: center;
  float: left;
}
.radioStyle checkbox .wx-checkbox-input{
    transform:scale(0.9); 
    border-radius: 50%
}
.detail{
  width: 86%;
  height: 100px;
  float: right;
}
.imgStyle{
  width: 60px;
  height: 100px;
  float: left;
}
.imgStyle image{
  width: 60px;
  height: 60px;
  padding-top: 20px;
}
.imgRight{
  margin-left: 70px
}
 .imgRight view:first-of-type{
  color: green;
  line-height: 50px;
}
.imgRight view:last-of-type{
  color: #000;
  font-size: 13px;
} 
.bootomStyle{
  z-index: 1;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height:50px;
  line-height: 50px;
  background-color: ghostwhite;
}
.bootomStyle view{
  display: inline-block;
}
.bootomStyle view:first-of-type{
  float: left;
}
.bootomStyle view:last-of-type{
  float: right;
}
.bootomStyle checkbox .wx-checkbox-input{
    transform:scale(0.9); 
    border-radius: 50%;
}
.bootomStyle checkbox{
    font-size: 18px;
}
.jiesuan{
  width: 150px;
  background-color: red;
  text-align: center;
  color: #fff;
}
.body-v{
  position: fixed;
  z-index: -1;
  top: 0px;
  bottom:50px;
}